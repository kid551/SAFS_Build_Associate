       <copy todir="${tcafssource}" preservelastmodified="true" >
        <fileset dir="${git.wdir.tcafs}" /></copy>
       <copy todir="${keywords}" preservelastmodified="true" >
        <fileset dir="${git.wdir.keywords}" /></copy>
       <copy todir="${eclipse-plugin}" preservelastmodified="true" >
